<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TournamentOrganizer.ParticipantsPage"
             xmlns:viewModel="clr-namespace:TournamentOrganizer.ViewModels"
             x:DataType="viewModel:ParticipantsPageViewModel"
             Title="{Binding Title}">
    <VerticalStackLayout>
        <Label 
            Text="Add/Remove Participants"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Back" Command="{Binding GoBackCommand}" />
    </VerticalStackLayout>
</ContentPage>